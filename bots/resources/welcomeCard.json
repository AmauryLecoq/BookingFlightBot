    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "small",
      "text": "For help, just tap 'help' or '?' and we will be delighted to provide it to you.",
      "isSubtle": true,
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "spacing": "default",
      "size": "small",
      "text": "If you wish to 'cancel' or 'quit', just say so anytime you wish.",
      "isSubtle": true,
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "small",
      "weight": "bolder",
      "text": "This is an educational bot based on a project proposed by [OpenClassrooms](https://openclassrooms.com)",
      "isSubtle": true,
      "wrap": true,
      "maxLines": 0
    }



  ]
